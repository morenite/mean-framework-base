extends ../../../views/layouts/default

block content
	.container
		.row
			.col-md-12
				.page-header
					h1 Tambah User Baru

		.row
			.col-md-4.col-md-offset-4
				form(method='post', action='/users/add')
					.form-group
						label Nama Lengkap
						input.form-control(type='text', name='name')
					.form-group
						label Nama
						input.form-control(type='text', name='display_name')
					.form-group
						label Nomor Induk
						input.form-control(type='text', name='id_number')
					.form-group
						label Nomor Identifikasi
						input.form-control(type='text', name='identifier')
					.form-group
						label Email
						input.form-control(type='text', name='email')
					.form-group
						label Alamat
						input.form-control(type='text', name='address')
					.form-group
						label Password
						input.form-control(type='password', name='password')
					.form-group
						label Program Studi
						select.form-control(name='major')
							each major in majors
								option(value='#{major._id}') #{major.name}
					.form-group
						label Role di Sistem
						select.form-control(name='role')
							option(value='administrator') Administrator
							option(value='staff') Staf
							option(value='lecturer') Dosen
							option(value='student') Mahasiswa

					input.btn.btn-success.btn-block(type='submit', value='Add New User')
